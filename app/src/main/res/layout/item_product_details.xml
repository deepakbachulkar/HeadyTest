<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/tv_color" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_size"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="tv_size"
            android:layout_width="100dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_size" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_color" app:layout_constraintEnd_toStartOf="@+id/tv_price"
    />
    <TextView
            android:text="@string/rupees"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:id="@+id/tv_price" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_size" app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>